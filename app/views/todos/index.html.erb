<%= form_for @todo do |f| %>  
  <%= f.text_field :title %>   
  <%= f.submit "Add" %>
<% end %> 
<ul>
<% @todos.each do |t| %> 
  <% if t.completed == true %>
    <li style="color:grey;">
    <%= check_box_tag  "todos_checkbox[]", t.id%> <s><%= t.title %></s> <%= link_to "Delete", t, method: :delete %>
    </li>
  <% else %>
    <li> 
    <%= check_box_tag  "todos_checkbox[]", t.id%> <%= t.title %> <%= link_to "Delete", t, method: :delete %> 
    </li>
  <% end %>
<% end %>
<%= submit_tag 'Complete Todos' %>
</ul>



